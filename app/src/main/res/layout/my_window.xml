<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_150_dp"
    android:layout_height="@dimen/common_150_dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"></Button>

    <Button
        android:id="@+id/StartYh"
        app:layout_constraintTop_toBottomOf="@+id/onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="开"
        android:layout_marginTop="@dimen/common_10_dp"
        android:background="@color/gray"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"></Button>

    <Button
        android:id="@+id/StopYh"
        app:layout_constraintLeft_toRightOf="@+id/StartYh"
        app:layout_constraintTop_toTopOf="@+id/StartYh"
        app:layout_constraintBottom_toBottomOf="@+id/StartYh"
        android:text="关"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:background="@color/gray"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"></Button>

    <Button
        android:id="@+id/StopService"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"></Button>

</android.support.constraint.ConstraintLayout>